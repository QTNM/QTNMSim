# minimal test macro
# verbose
/run/verbose 0
/tracking/verbose 2

# apply limit to transport before run init
/QT/transport/maxtime 0.5 ns
/QT/transport/maxstep 0.5 mm

# run init
/run/initialize

# set field Z value
